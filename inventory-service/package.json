{
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "dev:nodemon": "nodemon --watch src --exec tsx src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node --env-file .env dist/index.js",
    "type-check": "tsc --noEmit",
    "migrate": "drizzle-kit generate",
    "push": "drizzle-kit push"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "nodemon": "^3.1.11",
    "postgres": "^3.4.0",
    "winston": "^3.14.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
